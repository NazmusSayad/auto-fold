{
  "name": "auto-fold",
  "version": "0.0.0",
  "icon": "public/icon.png",
  "publisher": "NazmusSayad",
  "displayName": "Auto Fold & Unfold Code",
  "description": "Auto fold/unfold contents on any language",
  "scripts": {
    "lint": "eslint ./src",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "build": "npm run check-types && npm run lint && node esbuild.js --production && vsce package"
  },
  "contributes": {
    "configuration": {
      "title": "Auto Fold & Unfold Code",
      "properties": {
        "auto-fold.fold/unfold-imports-when-focus/blur": {
          "type": "boolean",
          "default": true,
          "description": "When import section is focused, unfold all imports. When import section is blurred, fold all imports."
        },
        "auto-fold.enable-str-search-imports-for-js": {
          "type": "boolean",
          "default": true,
          "description": "Enable string search for imports in JavaScript files. This is not the default behavior of VSCode. But the default behavior of vscode sometime does not work. So this is enabled by default."
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^20.17.30",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  },
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./dist/index.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Visualization",
    "Programming Languages"
  ],
  "keywords": [
    "fold",
    "unfold",
    "auto-fold",
    "auto-unfold",
    "auto-folding",
    "auto-unfolding",
    "folding",
    "unfolding",
    "code folding",
    "code unfolding",
    "code folding/unfolding",
    "import",
    "imports",
    "import section",
    "imports section",
    "auto fold import",
    "auto fold imports",
    "auto unfold import",
    "auto unfold imports",
    "auto fold/unfold import",
    "auto fold/unfold imports"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NazmusSayad/vscode.auto-fold.git"
  }
}
